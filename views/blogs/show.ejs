
<%- include("../partials/header")%>
<%- include("../partials/navbar")%>

<div class="container mt-5">

    <div class="row">
        <div class="col-lg-6">
            <div class="card" style="width: 25rem;">
              <h1 class="card-header"><%= blog.title %></h1>
                <img src="<%=blog.img%>" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%=blog.author%></h5>
                  
                  <p class="card-text"><%=blog.desc%></p>
                  <a href="/blogs/<%=blog._id%>/edit" class="btn btn-warning">Edit</a>
                  <div class="mt-3">
                    <form action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                  </form>
                  </div>
                 
                </div>
              </div>
        </div>

        <div class="col-lg-6">
            <h1>COMMENTS</h1>
            <form class="validated-form" action="/blogs/<%=blog._id%>/comment" method="POST" style="max-width:70%;" novalidate>
                
            
                <div class="mb-3">
                    <label for="desc" class="form-label">Description</label>
                    <textarea class="form-control" id="desc" cols="35" rows="3" name="comment" required></textarea>
                    <div class="valid-feedback">
                      Looks good!
                    </div>
                  </div>
               
                <button type="submit" class="btn btn-success">Submit</button>
              </form>

              <div class="mb-3 mt-5" >
                <%for(let reviews of blog.comments){%>
                    <div class="card mb-3">
                        <div class="card-header">
                          User
                        </div>
                        <div class="card-body">
                          <p class="card-text"><%=reviews.comment%></p>
                        </div>
                      </div>
    
                <%}%>
            </div>

        </div>

     

    </div>

</div>


<%- include("../partials/footer")%>